<!DOCTYPE html>
<html>
  <head>
    <title>TheGossipProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <span class="navbar-brand"> <%= link_to "The Gossip Project (Home)", '/index' %></span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <span class="nav-link"> <%= link_to "Team", '/team' %></span>
        </li>
        <li class="nav-item">
          <span class="nav-link"> <%= link_to "Contact", '/contact' %></span>
        </li>
        <li class="nav-item">
          <span class="nav-link"> <%= link_to "Disabled", '/welcome/first_name' %></span>
        </li>
        <div class=" nav-item bg.light col-12 d-flex justify-content-end">
          <span class="nav-item nav-link" ><%= link_to "Register", "/users/new" %></span>
          <span class="nav-item nav-link" ><%= link_to "Login", "/sessions/new" %></span>
          <% if session[:user_id] %>
            <span class="nav-item nav-link" ><%= link_to "Log out", session_path(session[:user_id]), method: :delete%></span>
          <% end %>
        </div>
      </ul>
    </div>
  </nav>
    <%= yield %>

